@model Gerenciamento.Models.Usuario

@{
    ViewData["Title"] = "Login";
    var naturalidades = @ViewBag.nat;

}
<div>
    <div class="kt-login__signin">
        <div class="kt-login__head">
            <h3 class="kt-login__title">Registre-se</h3>
        </div>
        <partial name="_ValidationSummary" />
        <form class="kt-form" asp-route="Register" id="form_login_signup">
            <input type="hidden" asp-for="ReturnUrl" />
            <div class="input-group">
                <input class="form-control" type="text" placeholder="Nome" name="Username" autocomplete="off">
            </div>
            <div class="input-group">
                <input class="form-control" type="text" placeholder="E-mail" name="Email" autocomplete="off">
            </div>
            <div class="input-group">
                <input class="form-control" type="password" placeholder="Senha" name="Password" id="Password" autocomplete="off">
            </div>
            <div class="input-group">
                <input class="form-control" type="password" placeholder="Confirmação de Senha" name="PasswordConfirmation" id="PasswordConfirmation" autocomplete="off">
            </div>
            <div class="row kt-login__extra">
                <div class="col kt-align-left">
                    <label class="kt-checkbox">
                        <input type="checkbox" name="Agree">Eu Aceito <a href='javascript:;' class="kt-link kt-login__link kt-font-bold">os termos e condições</a>.
                        <span></span>
                    </label>
                    <span class="form-text text-muted"></span>
                </div>
            </div>
            <div class="kt-login__actions">
                <button id="kt_login_signup_submit" class="btn btn-brand btn-pill kt-login__btn-primary">Inscreva-se!</button>&nbsp;&nbsp;
            </div>
        </form>
    </div>

</div>