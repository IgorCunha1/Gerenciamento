@model Gerenciamento.Models.Peixe

@{
    ViewData["Title"] = "Create";
    var naturalidades = @ViewBag.nat;

}
<style>
    h1
    {
       text-align:center;
    }



</style>

<h1>Create</h1>

<h4>Peixe</h4>
<hr />
<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ph" class="control-label"></label>
                <input asp-for="Ph" type="number" class="form-control" />
                <span asp-validation-for="Ph" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TamanhoMin" class="control-label"></label>
                <input asp-for="TamanhoMin" type="number" class="form-control" />
                <span asp-validation-for="TamanhoMin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TamanhoMax" class="control-label"></label>
                <input asp-for="TamanhoMax" type="number" class="form-control" />
                <span asp-validation-for="TamanhoMax" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Temperatura" class="control-label"></label>
                <input asp-for="Temperatura" type="number" class="form-control" />
                <span asp-validation-for="Temperatura" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Informacoes" class="control-label"></label>
                <textarea rows="5" asp-for="Informacoes" class="form-control"></textarea>
                <span asp-validation-for="Informacoes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <select class="form-control" asp-for="NaturalidadeId">
                    <option>Naturalidades</option>
                    @foreach (Naturalidade naturalidade in naturalidades)
                    {<option value="@naturalidade.id">@naturalidade.Descricao</option>}
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
